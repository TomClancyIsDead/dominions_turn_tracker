<h1>Listing games</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Host</th>
    <th>Era</th>
    <th>Server</th>
    <th>Port</th>
    <th>Turn number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= game.host_id %></td>
    <td><%= game.era %></td>
    <td><%= game.server %></td>
    <td><%= game.port %></td>
    <td><%= game.turn_number %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

